
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAsk.cshtml";
}



<div class="container">
    <div class="span12 center login-header">
        <h2>欢迎登陆吉林机关微课堂网站</h2>
    </div><!--/span-->


    <div class="row center">

        <form class="form-horizontal" action="@Url.Action("index")" method="post">
            <fieldset>
                <div class="input-prepend" title="用户名：" data-rel="tooltip">
                    <span class="add-on"><i class="icon-user"></i></span>
                    <input autofocus class="input-large span10" name="username" id="username" type="text" value="用户名" />
                </div>
                <div class="clearfix"></div>
                <div class="input-prepend" title="密 码：" data-rel="tooltip">
                    <span class="add-on"><i class="icon-lock"></i></span>


                    @if (Request.Cookies["userName"] != null)
                    {
                        <input class="input-large span10" name="password" id="password" type="password" value=@Request.Cookies["userName"].Value />

                    }

                    else
                    {
                        <input class="input-large span10" name="password" id="password" type="password" value="input" />
                    }


                    <input class="input-large span10" type="hidden" name="ReturnCtrl" id="ReturnCtrl" value="@Request.QueryString["ReturnCtrl"]" />
                    <input class="input-large span10" type="hidden" name="ReturnAction" id="ReturnAction" value="@Request.QueryString["ReturnAction"]" />
                </div>
                <div class="clearfix"></div>

                <br />
                @*<div class="input-prepend">
                    <label class="remember" for="remember"><input type="checkbox" id="remember" />记住密码</label>
                </div>*@
                <div class="clearfix"></div>
                <p class="center span5">
                    <button type="submit" class="btn btn-primary" name="login" value="Y">登陆网站</button>

                    <button type="submit" class="btn btn-primary" name="login" value="N">忘记密码</button>
                </p>
            </fieldset>
        </form>




    </div>





</div>